                </div>
                <div class="act_as_cell"
                     name="tax_balance"
                     style="width: 9.29%;">
                    Balance
                </div>
            </div>

            <t t-foreach="o.report_tax_line_ids" t-as="tax_line">
                 <div class="act_as_row lines">
                     <div class="act_as_cell left"
                         name="tax_name">
                        <span t-field="tax_line.tax_name"/>
                     </div>
                     <div class="act_as_cell left"
                         name="tax_code">
