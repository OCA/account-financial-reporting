<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data noupdate="1">

    <record id="group_l10n_be_intrastat_product" model="res.groups">
      <field name="name">Belgian Intrastat Product Declaration</field>
    </record>

    <record id="base.user_root" model="res.users">
      <field eval="[(4, ref('group_l10n_be_intrastat_product'))]" name="groups_id"/>
    </record>

    <record id="intrastat_region_company_rule" model="ir.rule">
      <field name="name">Intrastat Region Company rule</field>
      <field name="model_id" ref="model_intrastat_region"/>
      <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'child_of', [user.company_id.id])]</field>
    </record>

  </data>
</openerp>
