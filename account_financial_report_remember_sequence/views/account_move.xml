<data>
    <record model="ir.ui.view" id="view_move_tree">
        <field name="name">Add legal_sequence to tree</field>
        <field name="inherit_id" ref="account.view_move_tree" />
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="legal_sequence" optional="hide" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_account_move_filter">
        <field name="name">Add legal_sequence to search</field>
        <field name="inherit_id" ref="account.view_account_move_filter" />
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="legal_sequence" />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_move_form">
        <field name="name">Add legal_sequence to form</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <div name="journal_div" position="after">
                <field name="legal_sequence" />
            </div>
        </field>
    </record>
</data>
